{% extends 'base.html.twig' %}

{% block title %}Курсы / StudyOn{% endblock %}

{% block body %}
    <h1>Курсы</h1>
    {% if courses is not empty %}
        <div class="row row-cols-2 mt-4">
            {% for course in courses %}
                <div class="col pl-3 pr-3 pb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ course.name }}</h5>
                            <p class="card-text">{{ course.description }}</p>
                            <a href="{{ path('course_show', {'id': course.id}) }}" class="card-link">Перейти</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <h4>К сожалению, курсы не найдены</h4>
    {% endif %}
    <div class="line mt-4 mb-4"></div>
    <a href="{{ path('course_new') }}" class="btn btn-outline-secondary course-new-button">Новый курс</a>
{% endblock %}
