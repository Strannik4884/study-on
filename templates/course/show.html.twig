{% extends 'base.html.twig' %}

{% block title %}{{ course.name}} / StudyOn{% endblock %}

{% block body %}
    <h1>{{ course.name }}</h1>
    <p>{{ course.description }}</p>
    <h2>Уроки</h2>
    {% if lessons is not empty %}
        <ul class="lessons-list">
            {% for lesson in lessons %}
                <li class="lessons-list-item">{{ lesson.number }}. <a href="{{ path('lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <h4>К сожалению, уроки не найдены</h4>
    {% endif %}
    <div class="line mt-4 mb-4"></div>
    <div class="d-flex">
        <a href="{{ path('course_index') }}" class="btn btn-outline-secondary buttons-margin">К списку курсов</a>
        <a href="{{ path('course_edit', {'id': course.id}) }}" class="btn btn-outline-secondary buttons-margin">Редактировать</a>
        {{ include('course/_delete_form.html.twig') }}
        <a href="{{ path('lesson_new', {'course_id': course.id}) }}" class="btn btn-outline-secondary buttons-margin">Добавить урок</a>
    </div>
{% endblock %}
