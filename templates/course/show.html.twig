{% extends 'base.html.twig' %}

{% block title %}{{ course.name }}{% endblock %}

{% block body %}
    <h1>{{ course.name }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Название:</th>
            <td>{{ course.name }}</td>
        </tr>
        <tr>
            <th>Описание:</th>
            <td>{{ course.description }}</td>
        </tr>
        </tbody>
    </table>

    <h3>Список уроков</h3>
    <ol>
        {% for lesson in course.lessons %}
            <li><a href="{{ path('lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a></li>
        {% endfor %}
    </ol>

    <a href="{{ path('course_index') }}">К списку курсов</a>
    <a href="{{ path('course_edit', {'id': course.id}) }}">Редактировать курс</a>
    <a href="{{ path('lesson_new', {'course': course.id}) }}">Добавить новый урок</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
